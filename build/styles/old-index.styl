@import vars

main
  padding 75px 0

.outer-container
  max-width 1024px
  margin 0 auto
  padding 75px 2em

.inner-container
  display flex

  #infrastructure
    background-image url('../assets/images/infrastructure-cover.png')
    margin-right 25px

  #labour
    background-image url('../assets/images/labour-cover 2.png')
    margin-left 25px

  .flex-half
    max-height 1024px
    flex 1

    p
      margin-bottom 1em

  #left
    padding-right 25px

  #right
    padding-left 25px

    :last-child
      margin 0

  .image-link
    flex 1
    height calc(100% / 2 + 25px)
    border 1px solid text-col
    border-radius 4px
    background-size cover
    opacity 0.5
    transition 0.3s
    display flex
    max-width 600px

    &:hover
      opacity 1
      cursor pointer

    .link-label
      margin auto auto
      font-size 17px

.footer
  text-align center
  margin 100px auto 0 auto
  max-width 1000px
  padding 2em

  p
    font-size 12px
