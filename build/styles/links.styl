@import vars

.outer-container
  width 100%
  height 100%
  display flex
  box-sizing border-box

  .flex-half
    flex 1
    height calc(100% - 14em)
    border 1px solid grey
    border-radius 4px
    box-sizing border-box
    display flex
    background-size cover
    transition transform 0.7s

    &:hover {
      transform scale(1.03)
      cursor pointer
    }

  .label-container
    width 500px
    margin auto auto
    padding 1.5em
    border-radius 4px
    background rgba(background-col, 0.85);

  #infrastructure
    background-image url('../assets/images/infrastructure-cover.png')
    margin 7em 1em 2em 12vw

  #labour
    background-image url('../assets/images/labour-cover 2.png')
    margin 7em 12vw 2em 1em

.bigger-device
  width 100%
  height 100%
  background background-col
  z-index 100
  visibility hidden
  position absolute
  display flex
  top 0

  .container
    margin auto auto
    text-align center

    a
      margin-top 20px
      display block
      color text-col
      font-family 'Roboto Mono', monospace
      font-weight 300
      &:hover
        color accent-col

  @media screen and (max-width: 1000px)
    visibility visible
