@import vars

h1
  font-family: 'Roboto Mono', monospace
  font-weight: 300
  font-size 2.2em
  color text-col
  margin-bottom 1em

h2
  font-family: 'Roboto Mono', monospace
  font-weight: 300;
  font-size 1.6em
  color text-col
  margin-bottom 1em

h3
  font-family: 'Roboto', sans-serif
  font-weight: 300
  font-size 1.4em
  line-height: 1.4em
  color text-col

p
  font-family: 'Roboto', sans-serif
  font-weight: 300
  font-size 1em
  line-height 1.4em
  color text-col

a
  text-decoration none

body
  background background-col

.text-button
  border 1px solid text-col
  border-radius 4px
  padding 0.5em
  margin 3em auto
  width 200px
  text-align center
  transition 0.2s

  &:hover
    background-color accent-col

.navbar
  position absolute
  z-index 1
  padding 15px 12vw 15px 12vw
  margin 0
  height 50px
  width 100%
  background rgba(background-col, 0.85)
  box-sizing border-box
  a
    color text-col
    font-family 'Roboto Mono', monospace
    font-weight 300
    display inline
    &:hover
      color accent-col
  p
    display inline
  .back
    float right

.sketch
  position absolute
  z-index 0
