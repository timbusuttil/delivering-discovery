@import vars

.text-container-outer
  display flex
  top 25vh
  left 66vw
  position absolute
  width 30vw
  max-width 450px
  min-width 350px
  // background rgba(0, 0, 0, 0.75)

.text-container-inner
  flex 1

.stage-container
  z-index 2
  padding 1em
  border-radius 4px
  background rgba(background-col, 0.85);
  // border 1px solid green

.cluster-container
  margin-top 1em
  opacity 0
  transition 0.75s
  z-index 1
  padding 1em
  border-radius 4px
  background rgba(background-col, 0.75);
  // border 1px solid blue

  .cluster-header
    //

  .cluster-details
    color #888
    margin-bottom 0.5em
    font-family 'Roboto Mono', monospace
    font-weight 300

  .cluster-copy
    //

.body-copy
  color text-col

.fb-button
  position absolute
  bottom 1.5em
  color text-col
  display inline-block
  border 1px solid text-col
  border-radius 4px
  padding 0.37em 0.6em
  // margin-top 3.5em
  // margin-top 10em
  width 2em
  height 2em
  box-sizing border-box
  z-index 10
  &:hover
    background-color accent-col
    cursor pointer

.forward
  transition 0.2s
  right 12vw

.back
  transition 0.2s
  left 12vw

.tooltip-div
  position absolute
  background rgba(background-col, 0.75);
  z-index 2
  opacity 0
  padding 0.75em
  max-width 400px
  border-radius 4px
  transition opacity 0.2s

  .digitalID,.title,.author
    margin-bottom 5px
    font-size 0.7em
    font-family 'Roboto Mono', monospace
    font-weight 300
    color #ccc

  .title
    font-style italic

  .info
    // margin-top 10px

.bigger-device
  width 100%
  height 100%
  background background-col
  z-index 100
  visibility hidden
  position absolute
  display flex

  .container
    margin auto auto
    text-align center

    a
      margin-top 20px
      display block
      color text-col
      font-family 'Roboto Mono', monospace
      font-weight 300
      &:hover
        color accent-col

  @media screen and (max-width: 1000px)
    visibility visible
